---
// layout: #head, #navigation, #main
import { Font } from 'astro:assets';
import '../styles/global.css';
import Logo from '../assets/guava.svg';
import ID from '../assets/kio.svg';
import GuavaSprites from '../assets/guava-sprites.svg';

interface Props {
  title?: string;
  tag?: string;
  isHome?: boolean;
  description?: string;
  ogImage?: string;
}
const { title, tag, isHome, description, ogImage } = Astro.props;
const siteTitle = isHome ? 'Kyle Johnston\'s creative journal' : `${title} Â· Â· K:IO`;
const siteDescription = description || "A collection of things I've made, written, and that spark my curiosity";
const image = new URL(ogImage || '/og-image.png', Astro.site);
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const ogType = isHome ? 'website' : 'article';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{siteTitle}</title>
    <meta name="description" content={siteDescription} />
    <meta name="theme-color" content="#ff8888" />
    <link rel="alternate" type="application/rss+xml" title="Kyle Johnston's a creative journal" href={new URL("rss.xml", Astro.site)} />

    <meta property="og:type" content={ogType}>
    <meta property="og:url" content={canonicalUrl}>
    <meta property="og:title" content={siteTitle}>
    <meta property="og:description" content={siteDescription}>
    <meta property="og:image" content={image}>

    <Font cssVariable="--font-mono" preload />
    <Font cssVariable="--font-sans" preload />
    <Font cssVariable="--font-text" preload />
    <Font cssVariable="--font-custom" preload />
  </head>
  <body class={isHome ? 'home' : ''}>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <div class="contentful">
      <nav class="main-nav" aria-label="Main navigation">
        <div class="nav-left">
          <a href="/" title="Home" aria-label="Home">
            <GuavaSprites style="display:none" />
            <Logo class="guava" />
          </a>
          {tag && <span class="nav-separator"> / </span>}
          {tag && <div><a href={`/t/${tag}`} class={`small tag ${tag}`} title={`View all ${tag}s`} aria-label={`View all ${tag}s`}>{tag}s</a></div>}
        </div>
      </nav>
      <main id="main-content">
        <slot />
        <div>{tag && <div><span class="small secondary mr-0.5">View more </span><a href={`/t/${tag}`} class={`small tag ${tag}`} title={`View all ${tag}s`} aria-label={`View all ${tag}s`}>{tag}s</a></div>}</div>
      </main>
    </div>
    <footer>
        <div class="wrapper">
          <div class="smallish">
            <p><a href="/">Home</a> <span class="spacer">â€¢</span> <a href="/p/about/">About</a> <span class="spacer">â€¢</span> <a href="/p/links/">Links</a> <span class="spacer">â€¢</span> <a href="/p/now/">Now</a></p>
            <p>Connect with me on <a href="https://mastodon.online/@kylejohnston">ðŸ¦£ Mastodon</a>, <a href="https://bsky.app/profile/kylejohnston.bsky.social">ðŸ¦‹ Bluesky</a>, or <a href="https://www.linkedin.com/in/kylejohnston/">ðŸ‘” LinkedIn</a></p>
            <p>RSS: <a href="/rss.xml">Subscribe to posts</a> & <a href="/links.xml">Subscribe to links</a></p>
            <p>Source: <a href="https://github.com/kylejohnston/kyleio-blog">GitHub</a> <span class="spacer">â€¢</span> <a href="https://v1.kyleio.com/">V1</a></p>
          </div>
          <div>
            <ID>
          </div>
        </div>
    </footer>
  </body>
</html>
<style>
  .contentful {
    background: var(--back);
    width: calc(100vw - 12px);
    margin: 0 auto;
    padding-bottom: calc(var(--base) * 8);
    border-radius: 0 0 8px 8px;
    min-height: 88vh;
  }
  footer {
    margin: 0 auto;
    background: var(--cooler);
  }
  footer .wrapper {
    max-width: 808px;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: top;
    background: var(--cooler);
    color: var(--lightest);
    padding: calc(var(--base) * 4);
    gap: calc(var(--base) * 1);
  }
  footer p {
    margin: 0.5rem 0;
    text-wrap: balance;
  }
  .spacer { margin: 0 8px; }
  footer a:link, footer a:visited,
  footer p a:link, footer p a:visited
   {
    color: var(--lightest);
    text-decoration: underline dotted;
    text-decoration-color: var(--cool);
    text-decoration-skip-ink: auto;
    text-underline-offset: 3px;
  }
  footer a:hover, footer a:active,
  footer p a:hover, footer p a:active
   {
    background: var(--cooler);
    color: var(--color-text);
    text-decoration: none;
  }
</style>

<!-- Add this script before closing body tag -->
<script>
  const shapes = ['arcs', 'hex', 'ko', 'mod', 'octo', 'star', 'fox'];
  const logo = document.querySelector('.guava use');
  let isHovering = false;
  
  if (logo) {
    const parent = logo.parentElement;
    
    parent.addEventListener('mouseenter', () => {
      if (!isHovering) {
        isHovering = true;
        const randomShape = shapes[Math.floor(Math.random() * shapes.length)];
        logo.setAttribute('href', `#${randomShape}`);
      }
    });

    parent.addEventListener('mouseleave', () => {
      isHovering = false;
      logo.setAttribute('href', '#ko');
    });
  }
</script>
