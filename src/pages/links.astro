---
import Layout from '../layouts/Layout.astro';

const response = await fetch(`https://api.raindrop.io/rest/v1/raindrops/58403513`, {
  headers: {
    "Authorization": `Bearer ${import.meta.env.RAINDROP_TOKEN}`
  }
});
const data = await response.json();
const links = data.items;
---
<Layout title="Links">
    <header>
      <h1>Links</h1>
      <p class="description">Articles and links that I found interesting. <a href="https://kyleio.com/links.xml">Links RSS</a></p>
    </header>
    <ul class="links-list">
      {links.map(link => (
        <li>
          <h2><a href={link.link} target="_blank" rel="noopener noreferrer">{link.title}</a></h2>
          <blockquote>{link.excerpt}</blockquote>
          <p>{link.note}</p>
        </li>
      ))}
    </ul>
</Layout>
